<div class="col-sm-4 col-lg-3 sensor-card">
    <div class="card" style="width: 18rem; height: 22rem;">
        <div class="profile-img">
            <a href="#">
                <img class="profile-img" src={{this.avatar}} alt="Card image cap" width="130" height="130">
            </a>
        </div>

        <div class="card-body">
            <a style="text-decoration:none" href="#">
                <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.email}}</p>
            <a href="#" class="btn btn-outline-success">Nhắn tin</a>
            <a href="#" class="btn btn-outline-primary">Thêm bạn bè</a>
        </div>
    </div>
</div>